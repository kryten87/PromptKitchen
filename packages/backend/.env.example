# .env.example for Prompt Kitchen Backend

# Path to the SQLite database file
DB_FILE=./dev.sqlite3

# Add other environment variables below as needed
# Example:
# API_KEY=your-api-key-here

# Google OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URL=http://localhost:3000/auth/google/callback

# Session secret for signing cookies (change this to a strong random value in production)
SESSION_SECRET=your-session-secret

# Frontend URL for backend-to-frontend redirect after OAuth
# FRONTEND_URL is the base URL of your frontend app (used for OAuth redirect after login)
FRONTEND_URL=http://localhost:5173

# ---
# Instructions:
# 1. Copy this file to .env and fill in actual values as needed.
# 2. Do NOT commit your real .env file with secrets to version control.
